# CaseCraft Unified - Environment Variables
# Copy this file to .env (NOT .env.local) and add your actual values
# .env is gitignored and will NOT be committed

# ============================================================================
# AI Integration (OPTIONAL)
# ============================================================================

# Google Gemini API Key (optional - required for AI features)
# Get yours at: https://ai.google.dev/
# Leave blank to disable AI features
VITE_GEMINI_API_KEY=

# ============================================================================
# Truth Repo Configuration
# ============================================================================

# Absolute path to your Truth Repo root
# Default: auto-detected as ../../ (two levels up from casecraft-unified)
# VITE_TRUTH_REPO_PATH=/home/cyserman/Projects/Prose_Truth_Repo

# ============================================================================
# Privacy & Security
# ============================================================================

# Enable offline mode by default (true/false)
# When true, AI features will be disabled unless explicitly enabled
VITE_OFFLINE_MODE=false

# Show warning when AI API key is configured (true/false)
VITE_SHOW_API_WARNING=true
